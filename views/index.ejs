<!DOCTYPE html>
<html lang="en">
<head>
  <!-- Character encoding for the document -->
  <meta charset="UTF-8">
  
  <!-- Viewport settings for responsiveness on mobile devices -->
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  
  <!-- Title of the website displayed in the browser tab -->
  <title>Herr & Dam Mode Online - FreakyFashion</title>
  
  <!-- Link to Bootstrap 5 CSS for responsive design and components -->
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/5.0.0-alpha1/css/bootstrap.min.css" integrity="sha384-r4NyP46KrjDleawBgD5tp8Y7UzmLA05oM1iAEQ17CSuDqnUK2+k9luXQOfXJCJ4I" crossorigin="anonymous">
  
  <!-- Popper.js script required by Bootstrap for handling dropdowns and tooltips -->
  <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
  
  <!-- Bootstrap JavaScript for interactive components like modals and dropdowns -->
  <script src="https://stackpath.bootstrapcdn.com/bootstrap/5.0.0-alpha1/js/bootstrap.min.js" integrity="sha384-oesi62hOLfzrys4LxRF63OJCXdXDipiYWBnvTl9Y9/TRlw5xlKIEHpNyvvDShgf/" crossorigin="anonymous"></script>
  
  <!-- Link to custom stylesheet for additional styling -->
  <link rel="stylesheet" href="/stylesheets/style.css">
</head>
<body>

    <!-- Header section with logo and search/user icons -->
    <header class="site-header">
        <section>
            <!-- MAIN CONTAINER -->
            <div id="container">
    
                <!-- SHOP NAME: Link to the homepage with the shop's logo -->
                <div id="shopName">
                    <a href="/">
                        <img src="images/site-logo.png" alt="Site Logo">
                    </a>
                </div>
    
                <!-- Wrapper for search and user sections -->
                <div class="search-user-container">
                    <!-- SEARCH SECTION -->
                    <div id="search">
                        <i class="fa-solid fa-magnifying-glass"></i>
                        <input type="text" id="input" name="searchBox" placeholder="Sök produkter">
                    </div>
    
                    <!-- USER SECTION (Cart and User Icons) -->
                    <div id="user">
                        <div class="userIcon">
                            <!-- Cart icon linking to the cart page -->
                            <a href="cart.html"> <i class="fa-solid fa-basket-shopping"></i> </a>
                            <!-- Wishlist icon -->
                            <a href="#"> <i class="fa-solid fa-heart"></i> </a>
                        </div>
                    </div>
                </div>
    
            </div>
            <!-- Navigation for collections on the website -->
            <nav id="collection">
                <div id="nyheter"><a href="nyheter.html"> Nyheter </a></div>
                <div id="kategorier"><a href="kategorier.html"> Kategorier </a></div>
                <div id="topplistan"><a href="topplistan.html"> Topplistan </a></div>
                <div id="rea"><a href="rea.html"> Rea </a></div>
                <div id="kampanjer"><a href="kampanjer.html"> Kampanjer </a></div>
            </nav>
        </section>
    </header>
    
    <!-- CALL TO ACTION (CTA) Section -->
    <div class="py-5 bg-light c2a1" style="background-image: url(images/cta.jpg);">
        <div class="cta-container">
    
          <!-- Row for centering the CTA content -->
          <div class="row justify-content-center">
            <div class="col-md-7 text-center">
              <h2 class="mb-3 font-weight-medium">Fall/Winter 2024 Kollektionen</h2>
              <p class="font-weight-bold op-8">Säkra höstens streetwear mode redan idag! <br>Finns nu i onlineshoppen.</p></p>
              <a class="btn btn-danger-gradiant btn-md border-0 text-white mt-3 text-uppercase" href="#"><span>Shoppa</span></a>
            </div>
          </div>
        </div>
    </div>

    <!-- CATEGORY OPTIONS Section -->
    <div class="item-container">
        <div class="container-items">
            <!-- Each category displayed as a clickable item -->
            <div>
                <a href="#" class="item-link">
                <img src="images/item1.jpg" alt="">
                    <div class="item-content">
                        <p>Parfymer & Accessoarer</p>
                    </div>
                </a>
            </div>
            <div>
                <a href="#" class="item-link">
                <img src="images/item2.jpg" alt="">
                    <div class="item-content">
                        <p>Mode för Henne</p>
                    </div>
                </a>
            </div>
            <div>
                <a href="#" class="item-link">
                <img src="images/item3.jpg" alt="">
                    <div class="item-content">
                        <p>Mode för Honom</p>
                    </div>
                </a>
            </div>
        </div>
    </div>

    <!-- PRODUCT SECTION: Displays products dynamically -->
    <section class="section-products">
        <div class="container">
          <div class="row justify-content-center text-center">
            <div class="row">
              <% products.forEach((product, index) => { %>
                <!-- Single Product Card -->
                <div class="col-md-6 col-lg-4 col-xl-3">
                  <div id="product-<%= index + 1 %>" class="single-product">
                    <div class="part-1">
                      <!-- Product link with dynamic image and discount -->
                      <a href="/product/<%= product.urlSlug %>">
                        <% if (product.discount) { %>
                          <span class="discount"><%= product.discount %></span>
                        <% } %>
                        <img src="/uploads/<%= product.image %>" alt="<%= product.title %>">
                      </a>
                      <ul>
                        <!-- Icons for cart, add to wishlist, and expand options -->
                        <li><a href="#"><i class="fas fa-shopping-cart"></i></a></li>
                        <li><a href="#"><i class="fas fa-plus"></i></a></li>
                        <li><a href="#"><i class="fas fa-expand"></i></a></li>
                      </ul>
                      <!-- Heart icon for wishlist toggle -->
                      <input type="checkbox" id="heart-toggle-<%= index + 1 %>" class="heart-checkbox">
                      <label for="heart-toggle-<%= index + 1 %>">
                        <i class="far fa-heart heart-icon"></i>
                      </label>
                    </div>
                    <div class="part-2">
                      <!-- Product Title, Description, Price -->
                      <a href="/product/<%= product.urlSlug %>">
                        <h3 class="product-title"><%= product.title %></h3>
                        <h5 class="product-description"><%= product.category %></h5>
                        <% if (product.oldPrice) { %>
                          <h4 class="product-old-price"><%= product.oldPrice %></h4>
                        <% } %>
                        <h4 class="product-price"><%= product.price %> kr</h4>
                      </a>
                    </div>
                  </div>
                </div>
              <% }) %>
            </div>
          </div>
        </div>
    </section>

    <!-- FOOTER AREA: Site Information and Footer Links -->
    <div class="site-information">
        <div class="information-container">
            <!-- Information about shipping, payment security, and news -->
            <div>
                <img src="images/svg/earth-12-svgrepo-com.svg" alt="">
                <p>Gratis frakt & returer</p>
            </div>
            <div>
                <img src="images/svg/airplane-svgrepo-com.svg" alt="">
                <p>Expressfrakt</p>
            </div>
            <div>
                <img src="images/svg/shield-check-svgrepo-com.svg" alt="">
                <p>Säkra betalningar</p>
            </div>
            <div>
                <img src="images/svg/happy-face-svgrepo-com.svg" alt="">
                <p>Nyheter varje dag</p>
            </div>
        </div>
    </div>

<!-- Footer links for shopping, user accounts, and customer support -->
